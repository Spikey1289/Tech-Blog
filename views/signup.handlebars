<h2>Sign Up</h2>
<form class="form signup-form">
    <section>
        <label for="name-signup">Username:</label>
        <input type="text" id="name-signup" name="name-signup" />
    </section>

    <section>
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
    </section>

    <section>
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
    </section>

    <section>
        <button class="signup-submit" type="button">Sign Up</button>
    </section>
</form>
<br>
<button class="login-button">Log in</button>
<script src="/js/signup.js"></script>